<div id="home-page-contact" class="section container scrollspy">

  <h1 class="center">Entre em contato conosco</h1>

  <%= simple_form_for(@contact, :remote => true) do |f| %>
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :message, as: :textarea %>

    <%= f.button :submit_materialize, "Enviar" %>
  <% end %>

</div>
