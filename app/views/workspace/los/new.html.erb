<% provide(:title, "Novo OA") %>

<div id="box-new" class="col s9 container">

  <h3>Novo objeto de aprendizagem</h3>

  <%= simple_form_for([:workspace ,@lo], html: {class: 'col s12'}) do |f| %>

    <%= f.input :name, autofocus: true %>
    <%= f.input :description, as: :textarea %>

    <%= f.button :submit_materialize, "Confirmar" %>
  <% end %>

</div>
