<%= link_to('#new_question',class: 'btn-floating btn-large waves-effect waves-light red right',
            id: 'new_question_button') do%>
  <i class="material-icons">add</i>
<% end %>

  <%= render 'layouts/exercises/form_for_question'%>

<ul>
  <% @questions.each do |question| %>
    <li class="container">
      <div class="card blue-grey darken-1 col s8 push-s3">
        <div class="card-content white-text">
          <span class="card-title"><%= question.title%></span>
          <%= question.content.to_s.html_safe %>
        </div>
        <div class="card-action">
          <span class="card-title">testar resposta</span>
          <input type="text" name="name" value="">
          <%= link_to(workspace_lo_exercise_question_path(@lo, @exercise, question),
                        method: :delete, data: { confirm: 'tem certeza disso?' }) do %>
              <i class="material-icons">delete_forever</i>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
</ul>
