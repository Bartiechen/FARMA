<!DOCTYPE html>
<html>
  <head>
    <%= favicon_link_tag %>
    <title><%= full_title(yield(:title)) %></title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <%= stylesheet_link_tag    'devise/application', media: 'all', 'data-turbolinks-track' => "reload" %>
    <%= javascript_include_tag 'devise/application', 'data-turbolinks-track' => "reload" %>
    <%= csrf_meta_tags %>
  </head>

  <body id="workspace-page">

    <%= render 'shared/flash_messages' %>

    <div class="center">
      <%= link_to image_tag("logos/logo-farma-white.png", class: "brand-logo"), root_path %>
    </div>

    <div class="container">

        <div class="main-content row">
          <%= yield %>
        </div>

    </div>

  </body>
</html>
