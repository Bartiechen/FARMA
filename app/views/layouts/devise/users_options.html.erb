<!DOCTYPE html>
<html>
<head>
  <%= favicon_link_tag %>
  <title><%= full_title(yield(:title)) %></title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

  <%= stylesheet_link_tag    'devise/application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'devise/application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body id="devise-page">
  <header>

    <nav class="gren" role="navigation">
      <div class="nav-wrapper container">
        <%= link_to "FARMA", root_path, class: "brand-logo ", id: "logo-container" %>
      </div>
    </nav>

  </header>
  <%= render 'shared/flash_messages'  %>

  <main class="container">
    <div class="row">
       <div class="col l6 s12 offset-l3">
        <div class="card-panel hoverable">
          <div class="row">
            <div class="col s12">
              <h2 class="header center gray-text2"><%= yield :title %></h2>
              <%= yield :sub_tile %>
            </div>
          </div>

          <div class="row">
            <%= yield %>
          </div>

          <div class="row">
            <%= render "devise/shared/links" %>
          </div>

        </div>
      </div>
    </div>
  </main>

</body>
</html>
