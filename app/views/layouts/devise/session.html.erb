<!DOCTYPE html>
<html>
  <head>
    <%= favicon_link_tag %>
    <title><%= full_title(yield(:title)) %></title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <%= stylesheet_link_tag    'devise/application', media: 'all', 'data-turbolinks-track' => "reload" %>
    <%= javascript_include_tag 'devise/application', 'data-turbolinks-track' => "reload" %>
    <%= csrf_meta_tags %>
  </head>

  <body id="devise-page">

    <%= render 'shared/flash_messages' %>

    <div class="center">
      <%= link_to image_tag("logos/logo-farma-white.png", class: "brand-logo"), root_path %>
    </div>

    <div class="container row">

      <div class="card-panel hoverable col s6 offset-s3">
        <div class="center">
          <h1 class="header gray-text2"><%= yield :title %></h1>
          <p class="gray-text2"><%= yield :sub_title %></p>
        </div>

        <div class="row">
          <%= yield %>
        </div>

        <%= render "devise/shared/links" %>

      </div>
    </div>

  </body>
</html>
