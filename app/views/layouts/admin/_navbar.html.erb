<ul id='dropdown_admin' class='dropdown-content'>
  <li>
    <%= link_to("#") do %>
      Perfil <i class="fa fa-user" aria-hidden="true"></i>
    <% end %>
  </li>
  <li>
    <%= link_to(destroy_admin_session_path, method: :delete) do %>
      Sair <i class="fa fa-sign-out" aria-hidden="true"></i>
    <% end %>
  </li>
</ul>

<nav>
    <div class="nav-wrapper">
      <a href="#!" class="brand-logo">FARMA</a>
      <ul class="right hide-on-med-and-down">
        <!-- Dropdown Trigger -->
        <li class="user-profile">
          <a class="dropdown-button" href="#!" data-activates="dropdown_admin">
            <%= image_tag current_admin.avatar.small.url, class: "circle responsive-img" %>
            <%= current_admin.name %> <i class="fa fa-caret-down fa-5" aria-hidden="true"></i>
          </a>
        </li>
      </ul>
    </div>
</nav>
