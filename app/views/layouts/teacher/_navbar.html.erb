<div class="navbar-fixed">

  <ul id='dropdown_user' class='dropdown-content'>
    <li>
      <%= link_to(edit_user_registration_path) do %>
        Perfil <i class="fa fa-user" aria-hidden="true"></i>
      <% end %>
    </li>
    <li>
      <%= link_to(destroy_user_session_path, method: :delete) do %>
        Sair <i class="fa fa-sign-out" aria-hidden="true"></i>
      <% end %>
    </li>
  </ul>

  <nav>
    <%= link_to root_path, class: "brand-logo center" do %>
        <%= image_tag "logos/logo-farma-white.png", class: 'logo' %>
    <% end %>

    <ul id="button_links_user" class="hide-on-med-and-down right center">
      <li>
        <div class="switch switch-workspace">
          <label>
            Professor
            <input data-switch-to-url="<%= student_url %>" type="checkbox" <%= switch_workspace_checked_when_student %>>
            <span class="lever"></span>
            Estudante
          </label>
        </div>
      </li>

      <!-- Dropdown Trigger -->
      <li class="user-profile">
        <a class="dropdown-button" href="#!" data-activates="dropdown_user">
          <%= image_tag current_user.avatar.url(:thumb), class: "circle responsive-img" %>
          <%= current_user.name %> <i class="fa fa-caret-down fa-5" aria-hidden="true"></i>
        </a>
      </li>
    </ul>
  </nav>

</div>
