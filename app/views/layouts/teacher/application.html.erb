<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">



  <%= stylesheet_link_tag    'teacher/application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'teacher/application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

   <%= render 'shared/flash_messages'  %>

  <header>
    <div class="nav-dashboard">
    <%= render 'layouts/teacher/navbar' %>
  </div>
  </header>

  <main id="main-teacher" class="row">

    <div id="panel" class="col l2 row active hide-on-med-and-down">
      <%= render 'layouts/teacher/panel' %>
    </div>

    <div id="container">
      <div id="content-teacher" class="col m12 l9 offset-l2 row">

        <header id="header-teacher">
          <%= render_breadcrumbs :builder => ::MaterializeBreadcrumbs, class: 'nav-breadcrumbs z-depth-0' %>
          <div class="divider col s12"></div>
        </header>

        <div id="card-form" class="content white">
          <%= yield %>
        </div>

      </div>
    </div>

  </main>

</body>
</html>
