
  <%= simple_form_for([:workspace, @lo, @exercise, @question],
                    html: {class: 'col s7 push-s1 card-panel hoverable hide'}, remote: true) do |f| %>

    <%= f.input :title, autofocus: true %>
    <%= f.input :content, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'Full'} }%>
    <%= f.input :correct_answer%>
    <%= f.input :cmas_order, as: :checkbox_materialize %>

    <%= f.button :submit_materialize, "Confirmar" %>
  <% end %>
