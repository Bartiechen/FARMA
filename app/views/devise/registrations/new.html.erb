<% provide(:title, "Registre-se") %>
<% provide(:sub_title, "Preencha as informações abaixo para acessar a FARMA") %>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
                    html: {class: 'col s12', :multipart => true} ) do |f| %>

  <%= f.input :name, autofocus: true %>
  <%= f.input :email %>
  <%= f.input :password, placeholder: minimum_placeholder %>
  <%= f.input :password_confirmation %>
  
  <%= f.simple_fields_for :avatar do |avatar| %>
    <%= avatar.input :image, as: :file_materialize, direct: true, field_name: 'avatar' %>
  <% end %>

  <%= f.button :submit_materialize, "Registrar-se" %>

<% end %>
