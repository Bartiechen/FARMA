<% provide(:title, "Registre-se") %>
<% content_for :sub_title do %>
   <p> Preencha as informações abaixo para acessar a FARMA</p>
<% end %>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
                    html: {class: 'col s12'} ) do |f| %>

  <%= f.input :name, autofocus: true %>
  <%= f.input :email %>
  <%= f.input :password, placeholder: ("#{@minimum_password_length} caracteres no mínimo" if @minimum_password_length) %>
  <%= f.input :password_confirmation %>

  <%= f.button :submit_materialize, "Registrar-se" %>
<% end %>
