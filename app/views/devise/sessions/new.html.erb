<% provide(:title, "Entrar") %>
<% provide(:sub_title, "Acessa a FARMA agora mesmo por meio de seu email e senha de acesso") %>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
                     html: {class: 'col s12'} ) do |f| %>

    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
    <%= f.input :remember_me, as: :checkbox_materialize if devise_mapping.rememberable? %>

    <%= f.button :submit_materialize, "Entrar" %>
<% end %>
