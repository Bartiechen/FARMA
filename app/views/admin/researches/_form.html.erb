<%= simple_form_for(@admin_research) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :ref %>
    <%= f.input :abstract %>
    <%= f.input :link %>
    <%= f.input :kind %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
