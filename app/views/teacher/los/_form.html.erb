<%= simple_form_for([:teacher ,@lo], html: {multipart: true}) do |f| %>

  <%= f.input :name, autofocus: true %>

  <div id="box-textarea" class="col s9">
    <%= f.input :description, as: :textarea %>
    <%= f.association :tags, as: :mult_select, name: "Selecione as tags" %>
  </div>

  <div id="box-image-preview" class="col s3">
    <%= f.input :image, as: :image_preview %>
  </div>

  <%= f.button :submit_materialize, cancel: teacher_los_path %>

<% end %>
