<%= simple_form_for([:teacher ,@lo], html: {class: 'col s12'}) do |f| %>

  <%= f.input :name, autofocus: true %>
  <%= f.input :description, as: :textarea %>

  <div id="box-button-form" class="col s6 offset-s6 row">
    <div class="col s6 row">
      <%= link_to 'Cancelar', teacher_los_path, class: 'waves-effect waves-light btn' %>
    </div>

    <div class="col s6 row">
      <%= f.button :submit_materialize, "Confirmar"%>
    </div>
  </div>
<% end %>
