<%= simple_form_for([:teacher, @lo, @exercise], html: {class: 'col s12 row'}) do |f| %>

  <%= f.input :title, autofocus: true %>
  <%= f.input :content, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'Full'} }%>

  <%= f.button :submit_materialize, "Confirmar", cancel: teacher_lo_path(@lo) %>
<% end %>
