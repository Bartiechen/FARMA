<div class='fixed-modal-btn'>
  <%= link_to(new_teacher_lo_exercise_question_path(@lo, @exercise),
              class: 'btn-floating btn-large pink-red tooltipped',
              'data-position' => 'left', 'data-tooltip' => 'Criar uma nova Questão',
              remote: true) do %>
      <i class="large material-icons">add</i>
  <% end %>

  <div class="modal red z-depth-1 center"></div>
</div>

<article>
  <header class="center">
    <h2><%= @exercise.title %> - Questões</h2>
  </header>

  <%= @exercise.content.to_s.html_safe %>

  <ul id="questions_list" class="collection hoverable col s12">
    <%= render @questions %>
  </ul>

</article>
