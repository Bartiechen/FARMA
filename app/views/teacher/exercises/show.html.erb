<div class='fixed-modal-btn'>
  <%= link_to(new_teacher_lo_exercise_question_path(@lo, @exercise),
              class: 'btn-floating btn-large red tooltipped',
              'data-position' => 'left', 'data-tooltip' => 'Criar uma nova Questão',
              remote: true) do %>
      <i class="large material-icons">add</i>
  <% end %>
</div>

<article>
  <header class="center">
    <h2><%= @exercise.title %> - Questões</h2>
  </header>

  <div class="divider"></div>

  <%= @exercise.content.to_s.html_safe %>

  <div class="divider"></div>
  <div id="box-new-question"></div>
  <% if @questions %>
    <ul id="questions_list" class="collection col s12">
      <%= render @questions %>
    </ul>
  <% end %>
</article>
