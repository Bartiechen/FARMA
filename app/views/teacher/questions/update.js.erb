<%unless @question.errors.any? %>
  $("#question-<%= @question.id %>").load('<%= j render(partial: "teacher/questions/question", locals:  {question: @question}) %>');
<% end %>
Materialize.updateTextFields();

<% unless flash.empty? %>
  <% flash.each do |f| %>
    <% type = f[0].to_s.gsub('alert', 'error').gsub('notice', 'info') %>
    toastr['<%= type %>']('<%= f[1] %>');
  <% end %>
<% end %>
