<li class="container">
  <div class="card blue-grey darken-1 col s8 push-s3">
    <div class="card-content white-text">
      <span class="card-title"><%= @question.title %></span>
      <%= @question.content.to_s.html_safe %>
    </div>
    <div class="card-action">
      <span class="card-title">testar resposta</span>
      <input type="text" name="name" value="">
      <%= link_to(teacher_lo_exercise_question_path(@lo, @exercise, @question),
                    method: :delete, data: { confirm: "tem certeza disso?" }) do %>
          <i class="material-icons">delete_forever</i>
      <% end %>
      <%= link_to(edit_teacher_lo_exercise_question_path(@lo, @exercise, @question),
                  remote: true, class: 'btn-open-modal', id: "btn-question-#{@question.id}") do %>
          <i class="material-icons">build</i>
      <% end %>
    </div>
  </div>
</li>
