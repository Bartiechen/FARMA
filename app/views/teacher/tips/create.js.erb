<% unless @tip.errors.any? %>
  $("#list-tips-<%= @question.id %>").append('<%= j render(partial: "teacher/tips/tip", locals:  {tip: @tip}) %>');
  $("#question-<%= @question.id %>-show a.new-tip-btn").show()
  window.FARMA.toggleBoxNewTip("#box-new-tips-for-<%= @question.id %>");
<% end %>

Materialize.updateTextFields();

<% unless flash.empty? %>
  <% flash.each do |f| %>
    <% type = f[0].to_s.gsub('alert', 'error').gsub('notice', 'info') %>
    toastr['<%= type %>']('<%= f[1] %>');
  <% end %>
<% end %>
