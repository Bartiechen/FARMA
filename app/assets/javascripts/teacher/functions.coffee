###################################################################################################
################################## Slide question #################################################
###################################################################################################

FARMA.slideQuestion = (button_clicked)->
  div_id = '#' + $(button_clicked).attr('data-target')
  $(button_clicked).toggleClass 'active'
  $(div_id).slideToggle()
  $(document).on "click", ".box-response", ->
    $(@).hide
    FARMA.Keyboard.preLoad($(@).attr('data-id'))

###################################################################################################
################################## Toggle new Question ############################################
###################################################################################################

FARMA.toggleNewQuestion = ->
  $('#box-new-question').slideToggle(1000)
  $('.fixed-modal-btn').fadeToggle(1000)

###################################################################################################
################################## Toggle box new tip #############################################
###################################################################################################

FARMA.toggleBoxNewTip = (box_new_tip) ->
  $(box_new_tip).slideToggle()

###################################################################################################
################################## Fix tooltip ####################################################
###################################################################################################

FARMA.fixTooltip = ->
  $('.material-tooltip').hide()
